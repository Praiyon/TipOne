<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Bill"
        android:layout_width="55dp"
        android:layout_height="41dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="58dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Bill"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="43dp" />

    <EditText
        android:id="@+id/billEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="numberDecimal"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Bill"
        app:layout_constraintLeft_toRightOf="@+id/Bill"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="49dp"
        android:fontFamily="sans-serif-condensed"
        android:text="People"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bill"
        app:layout_constraintRight_toLeftOf="@+id/peopleEditText"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/peopleEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="56dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="56dp" />

    <TextView
        android:id="@+id/Currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="43dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="136dp"
        android:layout_height="26dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/peopleEditText"
        app:layout_constraintLeft_toRightOf="@+id/Currency"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Tip"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/Currency"
        android:layout_marginStart="43dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="136dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="97dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintVertical_bias="0.29"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>